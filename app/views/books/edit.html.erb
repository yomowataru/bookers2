<div>
  <h2>Editing Book</h2>
  <%= form_with model: @books do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <p>
    <%= f.submit 'UPdate Book' %>
    </p>
  <% end %>
  <p>
    <span><%= link_to "Show", book_path(@books.id) %></span>
    |
    <span><%= link_to "Back", books_path %></span>
  </p>
</div>