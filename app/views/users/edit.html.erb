<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>User info</h2>
      <div>
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      
      <%= form_with model: @user do |f| %>
        <label for="inputName">Name</label>
        <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
        <label for="inputImage">Image</label>
        <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
        <label for="inputIntroduction">introduction</label>
        <p><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %></p>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
    
  </div>
</div>
